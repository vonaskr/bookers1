<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class ="error_area">
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class = "field">
    <div class= "field_wtih_errors"><%= f.label :title %></div>
    <%= f.text_field :title %>
  </div>
  	
  <div class = "field">
    <div class= "field_wtih_errors"><%= f.label :body %></div>
    <%= f.text_area :body %>
  </div>
    
  <%= f.submit 'Update Book', class: "actions" %>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
<% end %>
<h1>Books</h1>

<% @books.each do |book| %>
  <p><%= book.title %>
    <%= book.body %>
    <%= link_to "show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
  </p>
<% end %>

<h1>新規投稿</h1>



<%= form_with model: @book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>